# ===========================================
# VOID Backend - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in the values.
# For Dokploy deployment, paste these into the Environment Variables section.

# === APP ===
NODE_ENV=development
PORT=4000

# === POSTGRES (container creation) ===
POSTGRES_USER=void
POSTGRES_PASSWORD=<your-secure-password>
POSTGRES_DB=void

# === TYPEORM / DATABASE CONNECTION ===
# Local:  TYPEORM_HOST=localhost, TYPEORM_PORT=5433
# Docker: TYPEORM_HOST=void-postgres, TYPEORM_PORT=5432 (set in docker-compose.yml)
TYPEORM_HOST=localhost
TYPEORM_PORT=5433
TYPEORM_USERNAME=void
TYPEORM_PASSWORD=<your-secure-password>
TYPEORM_DATABASE=void
TYPEORM_SYNCHRONIZE=true
TYPEORM_LOGGING=true

# === RIOT API ===
# Get your key from https://developer.riotgames.com/
RIOT_API_KEY=RGAPI-xxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
